@model MailChimp.Net.Models.Template

<a href="@Url.Action("GetAllTemplates","Template")" class="btn btn-primary">Get All Templates</a>
<br />

<br>
<input type="hidden" value="@ViewBag.templateId" />

<div class="form-group">
    @using (Html.BeginForm("UpdateTemplate", "Template", FormMethod.Post))
    {
        <input type="hidden" value="@ViewBag.templateId" name="templateId" />

        <div class="form-group">
            <label>Template html: </label>
            <input type="text" id="template" name="html" />
        </div>
        <div class="form-group">
            <label>Template Name: </label>
            <input type="text" value="@Model.Name" name="templateName" />
        </div>
        <div class="form-group  ">
            <label>Folder Id: </label>
            @Html.TextBoxFor(m => m.FolderId)
        </div>
        <input type="submit" class="btn btn-default" value="Update Template" />
    }
</div>