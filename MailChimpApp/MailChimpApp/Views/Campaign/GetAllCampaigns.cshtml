@model IEnumerable<MailChimp.Net.Models.Campaign>

@{
    ViewBag.Title = "Get All Campaign";
}

<h2>All Campaign</h2>

<p><a href="@Url.Action("AddCampaign","Campaign")" class="label label-primary" style="font-size: 14px"><span><i class="glyphicon glyphicon-plus"></i> New Campaign</span></a></p>

<table class="table table-hover">

    <thead>
    <tr style="background-color: antiquewhite">

        <th>Title</th>
        <th>Status</th>
        <th>Type</th>
        <th>Created Date</th>
        <th>From Name</th>
        <th>Reply To</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.Id">
                <td><a href="@Url.Action("","",new { })">@item.Settings.Title</a> </td>
                <td>@item.Status</td>
                <td>@item.Type</td>
                <td>@item.CreateTime</td>
                <td>@item.Settings.FromName</td>
                <td>@item.Settings.ReplyTo</td>
                <td>
                    <a onclick="Delete('@item.Id')" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>




<script>

    var Delete = function (id) {

        $.ajax({
            type: "POST",
            url: "/Campaign/DeleteCampaign",
            data: { campaignId: id },
            success: function (result) {
                $("#row_" + id).remove();
                alert("Campaign has been deleted !");
            },
            error: function (result) {
                alert("Encountered with a Error");
            }
        });
    }

</script>